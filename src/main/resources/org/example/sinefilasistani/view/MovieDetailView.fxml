<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="650.0" prefWidth="750.0" style="-fx-background-color: #333;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.sinefilasistani.controller.MovieDetailController">
    <left>
        <VBox alignment="TOP_CENTER" prefWidth="300.0" spacing="10.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <children>
                <ImageView fx:id="posterImageView" fitHeight="400.0" fitWidth="267.0" pickOnBounds="true" preserveRatio="true" />
            </children>
        </VBox>
    </left>
    <center>
        <VBox prefWidth="450.0" spacing="15.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="20.0" left="10.0" right="20.0" top="20.0" />
            </padding>
            <children>
                <Label fx:id="titleLabel" text="Film Başlığı Buraya Gelecek" textFill="WHITE" wrapText="true">
                    <font>
                        <Font name="System Bold" size="28.0" />
                    </font>
                </Label>
                <HBox alignment="CENTER_LEFT" spacing="20.0">
                    <children>
                        <Label fx:id="ratingLabel" text="⭐ 0.0 / 10" textFill="#FFC107">
                            <font>
                                <Font name="System Bold" size="16.0" />
                            </font>
                        </Label>
                        <Label fx:id="releaseDateLabel" text="Yayın Yılı: YYYY" textFill="#cccccc">
                            <font>
                                <Font size="16.0" />
                            </font>
                        </Label>
                    </children>
                </HBox>
                <Label text="Özet" textFill="#cccccc">
                    <font>
                        <Font name="System Bold" size="16.0" />
                    </font>
                    <VBox.margin>
                        <Insets top="10.0" />
                    </VBox.margin>
                </Label>
                <ScrollPane fitToWidth="true" hbarPolicy="NEVER" prefHeight="150.0" style="-fx-background: #333; -fx-background-color: #333;" VBox.vgrow="SOMETIMES">
                    <content>
                        <Label fx:id="overviewLabel" text="Film özeti buraya gelecek..." textFill="WHITE" wrapText="true" />
                    </content>
                </ScrollPane>

                <Label text="Oyuncu Kadrosu" textFill="#cccccc">
                    <font>
                        <Font name="System Bold" size="16.0" />
                    </font>
                    <VBox.margin>
                        <Insets top="10.0" />
                    </VBox.margin>
                </Label>
                <ScrollPane hbarPolicy="ALWAYS" vbarPolicy="NEVER" style="-fx-background: #333; -fx-background-color: #333;">
                    <content>
                        <HBox fx:id="castHBox" spacing="10.0">
                            <padding>
                                <Insets bottom="5.0" top="5.0" />
                            </padding>
                        </HBox>
                    </content>
                </ScrollPane>
                <Button fx:id="addWatchlistButton" mnemonicParsing="false" prefHeight="40.0" prefWidth="200.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold;" text="İzleme Listeme Ekle" VBox.vgrow="NEVER">
                    <VBox.margin>
                        <Insets top="15.0" />
                    </VBox.margin>
                </Button>
            </children>
        </VBox>
    </center>
</BorderPane>