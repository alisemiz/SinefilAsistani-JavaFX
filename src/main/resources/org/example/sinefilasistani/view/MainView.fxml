<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="700.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.sinefilasistani.controller.MainViewController">
    <top>
        <HBox alignment="CENTER_LEFT" prefHeight="60.0" spacing="10.0" style="-fx-background-color: #333;" BorderPane.alignment="CENTER">
            <children>
                <Label text="Sinefil Asistanı" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>
                <TextField fx:id="searchField" HBox.hgrow="ALWAYS" promptText="Film veya dizi ara..." />
                <Button fx:id="searchButton" mnemonicParsing="false" text="Ara" />
            </children>
            <padding>
                <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
            </padding>
        </HBox>
    </top>
    <center>
        <TabPane fx:id="mainTabPane" tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
            <tabs>

                <Tab text="Keşfet">
                    <content>
                        <ScrollPane fitToWidth="true" hbarPolicy="NEVER">
                            <content>
                                <TilePane fx:id="discoverTilePane" hgap="15.0" prefColumns="5" style="-fx-background-color: #2b2b2b;" vgap="15.0">
                                    <padding>
                                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                                    </padding>
                                </TilePane>
                            </content>
                        </ScrollPane>
                    </content>
                </Tab>

                <Tab fx:id="watchlistTab" text="İzleme Listem">
                    <content>
                        <ScrollPane fitToWidth="true" hbarPolicy="NEVER">
                            <content>
                                <TilePane fx:id="watchlistTilePane" hgap="15.0" prefColumns="5" style="-fx-background-color: #2b2b2b;" vgap="15.0">
                                    <padding>
                                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                                    </padding>
                                </TilePane>
                            </content>
                        </ScrollPane>
                    </content>
                </Tab>

            </tabs>
        </TabPane>
    </center>
</BorderPane>